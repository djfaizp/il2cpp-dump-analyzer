# Simple IL2CPP MCP Server Configuration (Local Mode)
# Copy this to .env in your working directory for local-only operation

# Core Configuration
NODE_ENV=production
DUMP_FILE_PATH=./dump.cs
EMBEDDING_MODEL=Xenova/all-MiniLM-L6-v2
LOG_LEVEL=info

# Vector Store Configuration (Local Mode)
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
HASH_FILE_PATH=./processed_files.json
FORCE_REPROCESS=false

# Advanced Configuration
MAX_SEARCH_RESULTS=50
ENABLE_CACHING=true
CACHE_DIR=./cache
MODEL_CACHE_DIR=./models

# Note: No Supabase configuration = uses local in-memory vector store
# This is perfect for local development and testing
